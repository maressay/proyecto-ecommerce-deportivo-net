@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "AthletiX";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
    /* codigo comun */
    @@importurl('https://fonts.googleapis.com/css2?family=Poppins:wght@100;300;400;500;600&display=swap');

    :root {
        --my-blue: #0074E4;
        --light-my-blue: #6FA6FF;
        /* Aquí defines el tono más claro */
        --celeste: #40E0D0;
        --light-celeste: hsl(177, 72%, 70%);
        --amarillo: #f9d806;
        --light-amarillo: #ffee80;
        --rojo: #FF0000;
        --light-rojo: #FFAFAF;
        --verde: #369681;
        --light-verde: #00B050;
        --black: #130f40;
        --light-color: #666;
        --border: .1rem solid rgba(0, 0, 0, .1);
        --box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .1);
    }

    * {
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        outline: none;
        border: none;
        text-decoration: none;
        transition: all .2s linear;
    }

    section {
        padding: 2rem 6%;
    }

    .heading {
        text-align: center;
        padding-bottom: 2rem;
        font-size: 4.5rem;
        color: var(--black);
    }

    .heading span {
        position: relative;
        z-index: 0;
    }

    .heading span::before {
        content: '';
        position: absolute;
        bottom: 1rem;
        left: 0;
        height: 100%;
        width: 100%;
        z-index: -1;
        background: var(--celeste);
        clip-path: polygon(0 90%, 100% 80%, 100% 100%, 0% 100%);
        /* CON ESTO PONGO LA LINEA AMARILLA ABAJO DE LA PALABRA Vehicles de color amarillo */
    }

    .btn {
        display: inline-block;
        margin-top: 1rem;
        border-radius: .5rem;
        background: var(--light-celeste);
        color: var(--black);
        font-weight: 500;
        font-size: 1.7rem;
        width: 250px;
        ;
        cursor: pointer;
        padding: .8rem 3rem;
    }

    .btn:hover {
        background: var(--celeste);
    }

    /* para mision vision y descripcion codigo */

    #mision {
        padding: 1rem;
    }

    #descripcion {
        padding: 1rem;
    }

    /* CSS DE ICONS EN EL MINUTO 36:40 */
    .icons-container {

        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(25rem, 1fr));
        gap: 1.5rem;

    }

    .icons-container .icons {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        padding: 2rem;
        background: #fff;
        box-shadow: var(--box-shadow);
        border-radius: .5rem;
    }

    .icons-container .icons i {
        height: 6rem;
        width: 12rem;
        line-height: 6rem;
        font-size: 2.5rem;
        border-radius: 50%;
        background: #eee;
        color: var(--black);
        text-align: center;
    }

    .icons-container .icons .content h3 {
        color: var(--celeste);
        font-size: 2.5rem;
    }

    .icons-container .icons .content p {
        color: var(--light-color);
        font-size: 1.5rem;
    }

    .icons-container .icons:hover {
        background: var(--black);
    }

    .icons-container .icons:hover i {
        background: var(--celeste);
    }

    .icons-container .icons:hover .content h3 {
        color: #fff;
    }

    .icons-container .icons:hover .content p {
        color: #eee;
    }

    /* mensaje de bienvenido */
    .Bienvenido {
        font-size: 5.5rem;
        background: var(--celeste);
        color: #fff;
        display: inline-block;
        padding: .5rem 3rem;
        clip-path: polygon(100% 0, 93% 50%, 100% 99%, 0% 100%, 7% 50%, 0% 0%);
    }

    body { /* Fondo del SALUDO PERSONALIZADO*/
        background-image: url("https://lh3.googleusercontent.com/drive-viewer/AK7aPaALS3bio0TMMZqOWPVgTLtSKWXjP5G9XzKwfoGTGbqh6StuDNid6_vTsBBwn2NtIGFx7OTZlo5F8vSBlGojHQl5izIBqA=w1920-h880");
        background-size: 100% 100vh;
        background-attachment: fixed;
    }

    .about { /* Fondo DESCRIPCION DE LA EMPRESA*/
        background-image: url("https://lh3.googleusercontent.com/u/0/drive-viewer/AK7aPaA-tJkaMlrlxbW0SHjstDuhyejR05JtF-9zxV-QdII7_cG81hVLiE03F6o-hygvq6sqZzORSUEkWLJ9WJ5hmq1QnKbAMQ=w1908-h897");
        background-attachment: fixed;
        background-size: cover;
    }

    .price { /* Fondo MISION*/
        background-image: url("https://lh3.googleusercontent.com/u/0/drive-viewer/AK7aPaC8mUvKOExe4KC4wejA0-ZcM2a8aSy78nQWkgDugjbVP_ldp4GroGGaAa6dNShqB4DY02IQ3-h0uyQSrwNGDpSlc_Im2Q=w1908-h897");
        background-attachment: fixed;
        background-size: cover;
        text-align: center;
    }

    .black {
        color: #fff;
    }

    .contact {
        background-image: url("https://lh3.googleusercontent.com/u/0/drive-viewer/AK7aPaDvhIxNjt1utT1Zg0Z0YSIliTaQhFvdw5JnHEM0bwLuqgGNzQ5t_Ap1dEv5BoKk6sHOzeonxHF7rBr7yu-LkXqn2F3z=w1908-h897");
        background-attachment: fixed;
        background-size: cover;
        padding-bottom: 0;
    }

    .headersec {
        height: 60vh !important;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .title {
        margin-bottom: 40px;
        font-size: 60px;
        font-weight: 600;
        text-transform: uppercase;
        color: #000000;
    }

    .p {
        margin-bottom: 40px;
        font-size: 18px;
        color: #000000;
        padding: 0 100px;
    }

    .content {
        height: 50vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .sau {
        padding: 30px;
        background-size: cover;
        background-image: url("https://lh3.googleusercontent.com/u/0/drive-viewer/AK7aPaA3WnQcfMA1GFUn5Cy4uIJmyuu1mUWFlPQbb2ajyQ492SqGjhmS-0E_VY7SdD8t-4JEqks7RUhXSWV7Lsc4DHfG7liufA=w1908-h897");
        background-attachment: fixed;
    }
</style>
@if (TempData["MessageLOGUEARSE"] != null)
{
    <div class="alert alert-danger">
        @TempData["MessageLOGUEARSE"]
    </div>
}


<div class="headersec">
    @if (SignInManager.IsSignedIn(User))
    {
        var userId = UserManager.GetUserId(User); // Obtén el ID del usuario autenticado
        var user = await UserManager.FindByIdAsync(userId); // Busca el usuario en la base de datos por ID

        // Si el usuario está autenticado, muestra un mensaje de bienvenida personalizado
        <h2 class="title"><span class="welcome">Bienvenido @user.Nombres @user.Apellidos!</span></h2>
        <p>DNI: @user.Dni</p>
        <!--<p>Obtenga información <a href="https://docs.microsoft.com/aspnet/core">sobre cómo crear aplicaciones web con
                ASP.NET Core</a>.</p>-->
    }
    else
    {
        // Si el usuario no está autenticado, muestra un mensaje de bienvenida genérico
        <h2 class="title"><span class="welcome">Bienvenido</span></h2>
        <!--<p>Obtenga información <a href="https://docs.microsoft.com/aspnet/core">sobre cómo crear aplicaciones web con
                ASP.NET Core</a>.</p>-->
    }
    <p class="p">MENSAJE DE BIENVENIDA AL USUARIO</p>
    <p class="p">MAS MENSAJE DE BIENVENIDA BLA BLA BLA</p>
</div>

<section class="content sau">
    <h2 class="title">Visión</h2>
    <p class="p">"Ser una empresa líder en Latinoamérica y el Caribe
        en la producción e innovación de alimentos de calidad, con una visión
        enfocada al cliente y generación de rentabilidad”</p>
    <div class="box-container"></div>
</section>

<section class="content about">

    <h2 class="title" style="color: white;">Descripción de la empresa</h2>
    <p class="p" style="color: white;">AthletiX es una empresa pionera en el campo de la nutrición deportiva. Nos especializamos en la venta de
                una amplia gama de productos, desde proteínas y aminoácidos hasta suplementos pre-entrenamiento y
                vitaminas. Nuestra plataforma de ecommerce facilita a los clientes el acceso a productos de alta
                calidad, garantizando una experiencia de compra cómoda y eficiente. En AthletiX, creemos en el poder de
                la nutrición adecuada para potenciar el rendimiento y apoyar un estilo de vida activo y saludable</p>

</section>

<section class="content price">
    <article class="contain">
        <h2 class="title" style="margin-top:20px;">Misión</h2>
        <p class="p">En AthletiX, nuestra misión es empoderar a atletas y entusiastas del fitness proporcionando suplementos
                nutricionales de la más alta calidad. Nos comprometemos a apoyar a cada individuo en su viaje hacia el
                bienestar y la excelencia física, ofreciendo productos que potencian el rendimiento, la recuperación y
                la salud general.</p>

    </article>
</section>

<section class="content contact">
    <h2 class="title" style="margin-top:30px;">Visión</h2>
    <p class="p">AthletiX aspira a consolidarse como la marca de referencia en el mundo de la nutrición deportiva, siendo
                sinónimo de calidad, confianza e innovación. Buscamos inspirar y facilitar a cada persona el camino
                hacia sus objetivos de salud y condición física, contribuyendo al mejoramiento continuo de su calidad de
                vida.</p>
</section>