@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="icon" href="~/images/logo.png" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/proyecto_ecommerce_deportivo_net.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/layout.css" />
</head>

<body>
    <!-------------------------------------------- HEADER SECTION -------------------------------------------->
    <header class="header">
        <div id="menu-btn" class="fas fa-bars"></div>
        <a class="logo" style="text-decoration: none;" asp-area="" asp-controller="Home" asp-action="Index">
            <img src="~/images/logo.png" alt="Logo" style="height: 40px; width: 40px; border-radius:50%;"
                id="imgLogoEmpresa">
            <span class="logo-text">AthletiX</span>
        </a>
        <nav class="navbar">
            <a class="nav-link text-dark" asp-area="" asp-controller="NoCliente" asp-action="Catalogo">Catalogo</a>
            <!--<a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AgregarProducto">Agregar
                Producto</a>-->
            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="ListaDeProductos">Lista De
                Productos</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contacto">Contactame</a>
        </nav>
        <div class="iconos">
            @if (SignInManager.IsSignedIn(User))
            {
                <div class="icono-user">
                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hola
                        @User.Identity?.Name!</a>
                </div>
                <div class="icono-logout">
                    <a class="fas fa-sign-out-alt" style="text-decoration: none;" asp-area="Identity"
                        asp-page="/Account/Logout"
                        asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"></a>
                </div>
            }
            else
            {
                <div class="icono-login">
                    <a class="fas fa-user-plus" style="text-decoration: none;" asp-area="Identity"
                        asp-page="/Account/Register"></a>
                </div>
                <div class="icono-logout">
                    <a class="fas fa-sign-in-alt" style="text-decoration: none;" asp-area="Identity"
                        asp-page="/Account/Login"></a>
                </div>
            }
        </div>
    </header>
    <!--------------------------------------------- MAIN SECTION --------------------------------------------->
    <div class="container-fluid">
        <main role="main" class="p-0">
            @RenderBody()
        </main>
    </div>
    <!-------------------------------------------- FOOTER SECTION -------------------------------------------->
    <section class="footer">
        <div class="box-container">
            <div class="box">
                <h3>Enlaces Rápidos</h3>
                <a href="#"> <i class="fas fa-arrow-right"></i> Principal </a>
